<p style="color: green"><%= notice %></p>

<h1>Recipes</h1>

<div id="recipes">
  <% @recipes.each do |recipe| %>

    <div class="container-solid">
      
      <div class="container-column"> 
        <p>
          <strong>Recipe:</strong>
          <%= recipe.name %>
        </p>


        <div class="container">
          <%= button_to(
            "Delete recipe",
            recipe_path(recipe.id),
            method: :delete
          ) %>

          <p>
            <%= link_to "Show more", recipe %>
          </p>
        </div>  


      </div> 
      <p>
        <strong>Description for the recipe:</strong>
        <%= recipe.description %>
      </p>

    </div>  

  <% end %>
</div>

<%= link_to "New recipe", new_recipe_path %>
