<h1 class="text-center">General Shopping List</h1>

<div class="d-flex justify-content-center gap-5">
<h5>Amount of food items to buy: <%= @foods_to_buy.count %></h5>
<h5>Total value of food needed: $<%= @total_value %> </h5>
</div>

<table class="table table-striped" id="ingredients">
      <thead>
        <tr>
          <th scope="col">Food</th>
          <th scope="col">Quantity</th>
          <th scope="col">Price</th>
        </tr>
      </thead>
      <tbody>
      <% @foods.each do |food| %>
        <% if food.to_buy && food.to_buy > 0 %>
          <tr>
            <td><%= food.name %></td>
            <td><%= food.to_buy %><%= food.measurement_unit %></td>
            <td>$<%= food.to_buy * food.price %></td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
